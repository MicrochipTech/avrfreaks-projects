# Define these according to your AVR
# You can always use the ./configure script to regenerate this Makefile
# for another target processor.

CPU_TYPE = __CONFIGURE_CPU_TYPE__
CPU_FREQ = __CONFIGURE_CPU_FREQ__

# End of user-defineable vars

TARGET = libavrutil++.a
LIBAVRUTIL = __CONFIGURE_LIBAVRUTIL__

CC = avr-gcc
CXX = avr-g++
AR = avr-ar
RM = rm
CP = cp
MKDIR = mkdir

CFLAGS = -c -std=gnu99 -Os -Wall -ffunction-sections -fdata-sections -mmcu=$(CPU_TYPE) -DF_CPU=$(CPU_FREQ) -I$(LIBAVRUTIL)/bld/include
CXFLAGS = -c -Os -Wall -fno-exceptions -fdata-sections -ffunction-sections -mmcu=$(CPU_TYPE) -DF_CPU=$(CPU_FREQ) -I$(LIBAVRUTIL)/bld/include
ARFLAGS = rcsv
RMFLAGS = -rf
CPFLAGS = -r
MKDIRFLAGS = -p

OBJECTS = $(patsubst %.c, %.o, $(wildcard *.c))
OBJECTS += $(patsubst %.cpp, %.o, $(wildcard *.cpp))
HEADERS = $(wildcard *.h)

$(TARGET): $(OBJECTS)
	$(AR) $(ARFLAGS) $@ $^

all: $(TARGET)

install: $(TARGET) $(HEADERS)
	$(CP) $(CPFLAGS) $(TARGET) ../bld/$(TARGET)
	$(MKDIR) $(MKDIRFLAGS) ../bld/include/avrutil++
	$(CP) $(CPFLAGS) $(HEADERS) ../bld/include/avrutil++

clean:
	$(RM) $(RMFLAGS) $(TARGET) $(OBJECTS) *~

%.o: %.c
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.cpp
	$(CXX) $(CXFLAGS) -o $@ $^

